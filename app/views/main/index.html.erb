
<div class="jumbotron">
  <h1>Welcome to Rewsly!</h1>
  <p>A collection of great articles and links</p>
  <%= link_to "Post a New Story", new_story_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive">
  <table class="table table-striped" role="grid">
    <thead>
      <tr>
        <th>#</th>
        <th>Story</th>
      </tr>
    </thead>
    <tbody>
      <% @stories.each do |story| %>
        <tr>
          <td><%= story.id %></td>
          <td><%= link_to story.title, story.link %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>