<h1>Stories:</h1>

<div class="table-responsive">
  <table class="table table-striped" role="grid">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Upvotes</th>
        <th>Category</th>
        <th>Vote</th>
      </tr>
    </thead>
    <tbody>
      <% @stories.each do |story| %>
        <tr>
          <td><%= story.id %></td>
          <td><%= link_to story.title, story.link %></td>
          <td><%= story.upvotes %></td>
          <td><%= story.category %></td>
          <td><%= link_to '+', upvote_story_path(story), method: :post, class: 'btn btn-default btn-sm' %>
          <%= link_to '-', downvote_story_path(story), method: :post, class: 'btn btn-default btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>